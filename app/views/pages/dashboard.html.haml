.row
  %h1.text-center Dashboard
  .col-md-4
    %h3.text-center
      Books #{link_to "New Book", new_book_path, class: 'btn btn-primary btn-sm'}

    %table.table.table-condensed
      %thead
        %tr
          %th ID
          %th Name
          %th Availability
      %tbody
        - @books.each do |book|
          %tr
            %td= book.id
            %td= link_to book.name, book_path(book)
            %td= book.availability
            %td= link_to "Edit", edit_book_path(book)

  .col-md-4
    %h3.text-center My Purchases

  .col-md-4
    %h3.text-center My Sales

